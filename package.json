{
  "name": "apitoll",
  "description": "API Toll â€” the payment layer for the AI agent economy. USDC micropayments on Base via x402.",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev:dashboard & npm run dev:indexer & npm run dev:discovery",
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "dev:indexer": "npm run dev --workspace=apps/indexer",
    "dev:discovery": "npm run dev --workspace=apps/discovery",
    "lint": "eslint .",
    "test": "vitest",
    "setup": "./scripts/setup.sh",
    "setup:testnet": "NETWORK=testnet ./scripts/setup.sh",
    "create-wallet": "npx tsx scripts/create-wallet.ts",
    "check-balance": "npx tsx scripts/check-balance.ts",
    "test-flow": "npx tsx scripts/test-flow.ts",
    "facilitator": "cd packages/facilitator && npx tsx src/server.ts",
    "seller": "cd apps/seller-api && npx tsx server.ts",
    "agent": "cd apps/agent-client && npx tsx agent.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "@cloudflare/next-on-pages": "^1.13.16",
    "convex": "^1.10.0",
    "stripe": "^20.3.1"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "convex-test": "^0.0.41",
    "eslint": "^9.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
