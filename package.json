{
  "name": "agentcommerce",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev:dashboard & npm run dev:indexer & npm run dev:discovery",
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "dev:indexer": "npm run dev --workspace=apps/indexer",
    "dev:discovery": "npm run dev --workspace=apps/discovery",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest"
  },
  "dependencies": {
    "convex": "^1.10.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
    "eslint": "^9.0.0",
    "@types/node": "^20.0.0"
  }
}
