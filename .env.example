# CRITICAL: Required for production
STRIPE_SECRET_KEY=sk_live_... # Get from Stripe Dashboard → Developers → API Keys
STRIPE_WEBHOOK_SECRET=whsec_... # Get from Stripe Dashboard → Developers → Webhooks (endpoint)
EXECUTOR_PRIVATE_KEY=0x... # Private key of wallet that distributes USDC on deposits (Base L2)

# Infrastructure
DATABASE_URL=postgresql://user:pass@localhost:5432/apitoll # Convex handles this; ignored if using Convex
REDIS_HOST=localhost # Upstash Redis or self-hosted
REDIS_PORT=6379
BASE_RPC_URL=https://mainnet.base.org # or use Alchemy/Infura endpoint

# Security
ALLOWED_ORIGINS=https://apitoll.ai,https://app.apitoll.ai,http://localhost:3333 # CORS whitelist
API_KEY_SECRET=your-secret-key-here # For signing API keys

# Convex (if self-hosting backend)
CONVEX_DEPLOYMENT=... # Your Convex deployment URL
CONVEX_API_KEY=... # Your Convex API key

# Monitoring
SENTRY_DSN=https://... # Optional: error tracking
LOG_LEVEL=info # debug, info, warn, error

# Feature flags
ENABLE_DEPOSITS=true # Allow fiat → USDC deposits
ENABLE_PAYOUTS=true # Allow USDC withdrawals
ENABLE_CIRCUIT_BREAKER=true # Redis fallback on failure

# Optional: Email/notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/... # For alerts
SENDGRID_API_KEY=SG... # For transactional emails

# Development
NODE_ENV=production # production, development, test
PORT=3000 # Server port
